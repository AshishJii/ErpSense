{
  "manifest_version": 2,
  "name": "ErpSense",
  "version": "1.5",
  "description": "Enhances the PSIT ERP experience.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "applications": {
    "gecko": {
      "id": "{5c5ed6db-ca57-4f05-aa95-3a4e00edf1c7}"
    }
  },
  "background": {
    "scripts": ["background-firefox.js"]
  },
  "permissions": [
    "https://erp.psit.ac.in/*",
    "cookies",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://erp.psit.ac.in/CR/cr_wall/*"],
      "js": ["content/crwall.js"],
      "css": ["styles/crwall.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/Dashboard"],
      "js": ["content/dashboard.js"],
      "css": ["styles/dashboard.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/MyAttendanceDetail"],
      "js": ["content/myattendancedetail.js"],
      "css": ["styles/myattendancedetail.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/ODRequest"],
      "js": ["content/odrequest.js"]
    }
  ]
}
