{
  "manifest_version": 3,
  "name": "ErpSense",
  "version": "1.2",
  "description": "Enhances the PSIT ERP experience.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "host_permissions": [
    "https://erp.psit.ac.in/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://erp.psit.ac.in/CR/cr_wall/*"],
      "js": ["content/crwall.js"],
      "css": ["styles/crwall.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/Dashboard"],
      "js": ["content/dashboard.js"],
      "css": ["styles/dashboard.css"]
    }
  ]
}
