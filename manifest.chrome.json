{
  "manifest_version": 3,
  "name": "ErpSense",
  "version": "1.8",
  "description": "Enhances the PSIT ERP experience.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background-chrome.js"
  },
  "permissions": [
    "offscreen",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://erp.psit.ac.in/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://erp.psit.ac.in/CR/cr_wall/*"],
      "js": ["lib/browser-polyfill.min.js","content/crwall.js"],
      "css": ["styles/crwall.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/Dashboard"],
      "js": ["lib/browser-polyfill.min.js","content/dashboard.js"],
      "css": ["styles/dashboard.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/MyAttendanceDetail"],
      "js": ["lib/browser-polyfill.min.js","content/myattendancedetail.js"],
      "css": ["styles/myattendancedetail.css"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/ODRequest"],
      "js": ["lib/browser-polyfill.min.js","content/odrequest.js"]
    },
    {
      "matches": ["*://erp.psit.ac.in/Student/PLAIRequest"],
      "js": ["lib/browser-polyfill.min.js","content/plairequest.js"]
    }
  ]
}
